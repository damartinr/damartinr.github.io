<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign events = site.data.resume.events | sort: 'date' | reverse %}
  {% for event in events %}
    <li class="list-group-item">
      <div class="row">
        <!-- Date + Location Column -->
        <div class="col-xs-2 col-sm-2 col-md-2 text-center date-column">
          {% if event.date %}
            {% assign date = event.date | split: '-' | join: '.' %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <table class="table-cv">
            <tbody>
              <tr>
                <td>
                  <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
                    {{ date }}
                  </span>
                </td>
              </tr>

              {% if event.location %}
                <tr>
                  <td>
                    <p class="location">
                      <i class="fa-solid fa-location-dot iconlocation"></i>
                      {{ event.location }}
                    </p>
                  </td>
                </tr>
              {% endif %}
            </tbody>
          </table>
        </div>

        <!-- Content Column -->
        <div class="col-xs-10 col-sm-10 col-md-10 mt-2 mt-md-0">
          <!-- Title with link -->
          {% if event.slug != "" %}
            <h6 class="title font-weight-bold ml-1 ml-md-4">
              <a href="{{ '/blog/' | append: event.slug | relative_url }}">
                {{ event.title }}
              </a>
            </h6>
          {% else %}
            <h6 class="title font-weight-bold ml-1 ml-md-4">
              {{ event.title }}
            </h6>
          {% endif %}

          <!-- Italics + bold line for event + organizer -->
          {% if event.event %}
            <p class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic;">
              {{ event.event }}
              {% if event.organizer %}
                <strong> (Organized by {{ event.organizer }})</strong>
              {% endif %}
            </p>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
